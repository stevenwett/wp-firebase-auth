# Editor configuration, see http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.md]
max_line_length = off
trim_trailing_whitespace = true

[*.{js,json}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.{php,html,htm,twig,xml}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.{scss,sass,css}]
charset = utf-8
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[{package.json, *.yml}]
indent_style = space
indent_size = 2
